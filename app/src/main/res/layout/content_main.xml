<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sei.geographicstory.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/relative_to_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Position relative to start:"
        android:textSize="50sp"
        />

    <TextView
        android:id="@+id/display_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relative_to_start_text"
        android:textSize="50sp"
        />

    <TextView
        android:id="@+id/display_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/display_coordinates"
        android:textSize="50sp"
        />

    <TextView
        android:id="@+id/accuracy_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/display_accuracy"
        android:textSize="25sp"
        android:text="Note: Updates will only occur when accuracy is less than  5.0"
        android:textAlignment="center"
        />

